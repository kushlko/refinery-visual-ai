import ReactDOM from 'react-dom/client';
import { Upload, FileVideo, AlertCircle, CheckCircle2, FileText, Download, Play, BarChart3, ShieldCheck, X, File as FileIcon, RotateCcw, Link as LinkIcon, Plus } from 'lucide-react';
